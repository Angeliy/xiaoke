<view class="container">
  <view class="swiper-tab">
    <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">排队订单</view>
    <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">今日订单</view>
    <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">取消订单</view>
    <view class="swiper-tab-list {{currentTab==3 ? 'on' : ''}}" data-current="3" bindtap="swichNav">历史订单</view>
  </view>

  <swiper current="{{currentTab}}" duration="300" bindchange="switchTab" style="height:{{winHeight}}rpx">
    <!-- 排队订单 -->
    <swiper-item>
      <scroll-view scroll-y="true" class="scoll-h" bindscrolltolower="jiazaigengduo">
        <view class='line' id='{{index}}' wx:for="{{items}}">
          <view class='num'>
            <text>{{index+1}}</text>
          </view>
          <view class='til'>
            <text>{{item.projectStr}} ~ {{item.customerName}}</text>
            <text>{{item.arriveTime}}</text>
            <view class="til" data-phone="{{item.customerPhone}}" bindtap="call"><text>{{item.customerPhone}}</text></view>
          </view>
          <view class='til tl'>
            <text>{{item.employeeName}}</text>
            <text>{{item.shopName}}</text>
            <button type="default" bindtap='openConfirm' data-id="{{item.orderID}}">确认订单</button>
          </view>
        </view>
      </scroll-view>
    </swiper-item>

    <!-- 完成订单 -->
    <swiper-item>
      <scroll-view scroll-y="true" class="scoll-h" bindscrolltolower="jiazaigengduo">
        <view class='line' id='{{index}}' wx:for="{{items}}">
          <view class='num'>
            <text>{{index+1}}</text>
          </view>
          <view class='til'>
            <text>{{item.projectStr}}  ~ {{item.customerName}}</text>
            <text>{{item.arriveTime}}</text>
            <!-- <view class="til" data-phone="{{item.customerPhone}}" bindtap="call"><text>{{item.customerPhone}}</text></view> -->
          </view>
          <view class='til tl'>
            <text>{{item.employeeName}}</text>
            <text>{{item.shopName}}</text>
          </view>
        </view>
      </scroll-view>
    </swiper-item>


    <!-- 取消订单 -->
    <swiper-item>
      <scroll-view scroll-y="true" class="scoll-h" bindscrolltolower="jiazaigengduo">
        <view class='line' id='{{index}}' wx:for="{{items}}">
          <view class='num'>
            <text>{{index+1}}</text>
          </view>
          <view class='til'>
            <text>{{item.projectStr}} ~ {{item.customerName}}</text>
            <text>{{item.arriveTime}}</text>
            <!-- <view class="til" data-phone="{{item.customerPhone}}" bindtap="call"><text>{{item.customerPhone}}</text></view> -->
          </view>
          <view class='til tl'>
            <text>{{item.employeeName}}</text>
            <text>{{item.shopName}}</text>
          </view>
        </view>
      </scroll-view>
    </swiper-item>

    <!-- 历史订单 -->
    <swiper-item>
      <scroll-view scroll-y="true" class="scoll-h" bindscrolltolower="jiazaigengduo">
        <view class='line' id='{{index}}' wx:for="{{items}}">
          <view class='num'>
            <text>{{index+1}}</text>
          </view>
          <view class='til'>
            <text>{{item.projectStr}} ~ {{item.customerName}}</text>
            <text>{{item.arriveTime}}</text>
            <!-- <view class="til" data-phone="{{item.customerPhone}}" bindtap="call"><text>{{item.customerPhone}}</text></view> -->
          </view>
          <view class='til tl'>
            <text>{{item.employeeName}}</text>
            <text>{{item.shopName}}</text>
          </view>
        </view>
      </scroll-view>
    </swiper-item>

  </swiper>
</view>