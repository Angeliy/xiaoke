page {
  background: #f2f4f6;
}

.num image {
  width: 78rpx;
  height: 78rpx;
  margin-right: 20rpx;
}

.line {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 1px solid #eee;
  margin-bottom: 20rpx;
}

.til {
  flex: 3;
}

.tl {
  flex: 1;
  text-align: right;
}

.tl button {
  font-size: 26rpx;
  height: 50rpx;
  width: 150rpx;
  line-height: 47rpx;
  background: #ffc824;
  border: 1px solid #333;
  border-radius: 15rpx;
}

.til text {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.til text:nth-child(2) {
  font-size: 22rpx;
  display: block;
  color: #666;
  font-weight: normal;
}
