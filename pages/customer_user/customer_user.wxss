/**
 * 授权提示
 */
.drawer_box {
width: 650rpx;
overflow: hidden;
position: fixed;
top: 50%;
left: 0;
z-index: 1001;
background: #f8f8f8;
margin: -150px 50rpx 0 50rpx;
border-radius: 3px;
}
.drawer_title {
font-size: 30rpx;
color: #666;
padding: 15px;
border-bottom: 1px solid #e8e8ea;
text-align: center;
}

/**
 * 提示窗口
 */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  padding-top: 50rpx;
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}

.modal-title {
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-footer {
  margin-top: 50rpx;
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-confirm {
  width: 100%;
  color: #ec5300;
  text-align: center;
}