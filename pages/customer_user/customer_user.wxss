page {
  background: #f2f4f6;
}

.content {
  background: #fff;
  margin-bottom: 30rpx;
}

.content image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  vertical-align: middle;
}

.list text {
  font-size: 28rpx;
  color: #666;
}

.user {
  display: flex;
  align-items: center;
  padding: 30rpx;
}

.user_a image {
  width: 130rpx;
  height: 130rpx;
}

.user_a text {
  display: block;
  padding-left: 20rpx;
}

.tor {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  margin: 0 22rpx;
}

.list .tor:nth-child(1) {
  border-bottom: 1px solid #eee;
}

.list .tor:nth-child(2) {
