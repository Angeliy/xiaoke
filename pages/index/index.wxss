page {
  background: #f2f4f6;
}

.container {
  margin-bottom: 80rpx;
}

.content {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.weui-cell {
  padding: 20rpx 0;
}

.title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-bottom: 25rpx;
  text-align: center;
}

.title text:nth-child(1) {
  font-size: 40rpx;
}

.title text:nth-child(2) {
  font-size: 28rpx;
}

.list {
  margin: 20rpx 20rpx 0 0;
  font-size: 30rpx;
}

.list image {
  width: 35rpx;
  height: 35rpx;
  margin-right: 5px;
  vertical-align: middle;
}

.stylist {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #eee;
  padding: 25rpx 0;
  color: #666;
  font-size: 25rpx;
}

.stylist_photo image {
  width: 160rpx;
  height: 160rpx;
  vertical-align: middle;
}

.stylist_text {
  display: flex;
  flex-direction: column;
}

.stylist_text .p {
  font-size: 30rpx;
  padding: 0 15rpx 15rpx 0;
  color: #343434;
  font-weight: bold;
}

.stylist_text text:nth-child(4) {
  color: #ffc824;
  font-size: 25rpx;
}

.stylist_text image {
  height: 25rpx;
  width: 25rpx;
  display: inline-block;
  margin: 0 5rpx;
}

.stylist .btn button {
  font-size: 28rpx;
  width: 190rpx;
  height: 55rpx;
  line-height: 54rpx;
  background: #f7d856;
  border-radius: 13rpx;
  border: 1px solid #333;
}

.advert image {
  width: 100%;
  height: 200rpx;
  margin: 0;
}

.map {
  background: transparent;
  height: 80rpx;
  font-size: 30rpx;
}

.map .weui-cell__bd .font {
  left: 0;
  float: left;
}

.dian_box {
  display: flex;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  border-right: 1px solid #eee;
}

.dian_box image {
  width: 160rpx;
  height: 160rpx;
  margin-right: 30rpx;
}

.cc {
  display: flex;
  align-items: center;
}

.p1 {
  width: 500rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 35rpx;
  color: #333;
}

.p2 {
  color: red;
  margin-right: 20rpx;
}

.p3 {
  width: 65rpx;
  height: 40rpx;
  background: #ffc824;
  color: #fff;
  font-size: 25rpx;
  line-height: 40rpx;
  text-align: center;
  margin-right: 168rpx;
}

.p4 {
  font-size: 26rpx;
  color: #666;
}

.dian_box .btn {
  font-size: 28rpx;
  width: 150rpx;
  height: 55rpx;
  line-height: 54rpx;
  background: #f7d856;
  border-radius: 13rpx;
  border: 1px solid #333;
}

.gg {
  display: flex;
  flex-direction: column;
}

/**
 * 授权提示
 */

.drawer_box {
  width: 600rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 3%;
  z-index: 1001;
  background: #f8f8f8;
  margin: -150px 50rpx 0 50rpx;
  border-radius: 3px;
}

.drawer_title {
  font-size: 30rpx;
  color: #666;
  padding: 15px;
  border-bottom: 1px solid #e8e8ea;
  text-align: center;
}
