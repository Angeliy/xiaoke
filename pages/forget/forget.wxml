<form bindsubmit="formSubmit" bindreset="formReset">
  <view class='signin'>
    <view class="title">忘记密码</view>
    <view class='cont'>
      <view class="weui-cell">
        <view style="width: 100rpx">
          <view class="weui-cell__hd">
            <view class="weui-label">手机号：</view>
          </view>
        </view>
        <view>
          <input class="weui-input" bindinput="getshoujihaoma" name="zhanghao" placeholder="请输入账号"/>
        </view>
        <view class="weui-vcode-btn" bindtap="getyangzhengma">获取验证码</view>
      </view>
    </view>
    <view class='cont'>
      <view class="weui-cell">
        <view style="width: 110rpx">
          验证码：
        </view>
        <view>
          <input class="weui-input" name="yangzhangma" placeholder="请输入验证码" />
        </view>
      </view>
    </view>
    <view class='cont'>
      <view class="weui-cell">
        <view style="width: 110rpx">
          新密码：
        </view>
        <view>
          <input password class="weui-input" name="newmima" placeholder="请输入新密码" />
        </view>
      </view>
    </view>
    <view class='btn'>
      <button type='button' formType="submit">确认</button>
    </view>
  </view>
</form>